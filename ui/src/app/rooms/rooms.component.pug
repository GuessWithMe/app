.container
  .row
    .col-12
      .toolbar
        form.example-form
          mat-form-field.example-full-width
            input(matInput='', placeholder='Filter rooms', name="filter", [ngModel]="filterValue", (ngModelChange)="onFilterChange($event)")
    .col-12.col-md-6(*ngFor="let room of rooms")
      mat-card.d-flex.mb-4
        div.d-flex
          .img-container
            .no-image-place
          .div.ml-3.d-flex
            div
              h4.m-0 {{ room.title }}
              p.m-0.text-muted {{ room.subtitle }}
            a.flex-center(mat-flat-button, color="primary", [href]="'/game/rooms/' + room.value") Join

